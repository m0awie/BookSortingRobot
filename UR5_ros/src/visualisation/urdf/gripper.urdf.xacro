<robot name="gripper" xmlns:xacro="http://ros.org/wiki/xacro">

    <!-- Base link -->
    <link name="base_link">
        <visual>
            <geometry>
                <box size="0.1 0.1 0.02"/> <!-- Base dimensions adjusted -->
            </geometry>
            <material name="gray">
                <color rgba="0.5 0.5 0.5 1"/>
            </material>
        </visual>
    </link>

    <!-- Left finger -->
    <link name="left_finger">
        <visual>
            <geometry>
                <box size="0.02 0.02 0.1"/> <!-- Finger size -->
            </geometry>
            <origin xyz="0.0 0.05 0.0"/>
            <material name="blue">
                <color rgba="0.0 0.0 1.0 1"/>
            </material>
        </visual>
        <collision>
            <geometry>
                <box size="0.02 0.02 0.1"/> <!-- Collision geometry matches visual -->
            </geometry>
            <origin xyz="0.0 0.05 0.0"/>
        </collision>
    </link>

    <!-- Right finger -->
    <link name="right_finger">
        <visual>
            <geometry>
                <box size="0.02 0.02 0.1"/> <!-- Finger size -->
            </geometry>
            <origin xyz="0.0 -0.05 0.0"/>
            <material name="red">
                <color rgba="1.0 0.0 0.0 1"/>
            </material>
        </visual>
        <collision>
            <geometry>
                <box size="0.02 0.02 0.1"/> <!-- Collision geometry matches visual -->
            </geometry>
            <origin xyz="0.0 -0.05 0.0"/>
        </collision>
    </link>

    <!-- Left finger joint (prismatic for symmetric opening) -->
    <joint name="left_joint" type="prismatic">
        <parent link="base_link"/>
        <child link="left_finger"/>
        <origin xyz="0.0 0.05 0.0" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
        <limit lower="0" upper="0.05" effort="1.0" velocity="0.5"/>
    </joint>

    <!-- Right finger joint (prismatic for symmetric opening) -->
    <joint name="right_joint" type="prismatic">
        <parent link="base_link"/>
        <child link="right_finger"/>
        <origin xyz="0.0 -0.05 0.0" rpy="0 0 0"/>
        <axis xyz="0 -1 0"/>
        <limit lower="0" upper="0.05" effort="1.0" velocity="0.5"/>
    </joint>

</robot>